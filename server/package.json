{
    "name": "cpen-321-server",
    "version": "1.0.0",
    "description": "CPEN 321 Server Code",
    "main": "server.js",
    "scripts": {
        "build": "tsc",
        "lint": "tslint -c ./tslint.json ./src/**/*.ts",
        "start": "env-cmd -f ./config/dev.env node --inspect=5858 -r ts-node/register ./src/server.ts",
        "start:dev": "env-cmd -f ./config/dev.env nodemon",
        "start:prod": "npm run build && env-cmd -f ./config/dev.env node ./dist/server.js",
        "test": "env-cmd -f ./config/test.env jest --runInBand --coverage",
        "test:watch": "env-cmd -f ./config/test.env jest --runInBand --watch",
        "travis": "env-cmd -f ./config/travis.env jest --runInBand"
    },
    "devDependencies": {
        "@types/jest": "^24.0.23",
        "@types/node": "^12.7.4",
        "env-cmd": "^10.0.1",
        "jest": "^24.9.0",
        "mongodb-memory-server": "^6.0.1",
        "nodemon": "^1.19.2",
        "prettier": "^1.18.2",
        "supertest": "^4.0.2",
        "ts-jest": "^24.1.0",
        "ts-node": "^8.3.0",
        "tslint": "^5.19.0",
        "tslint-config-prettier": "^1.18.0",
        "tslint-plugin-prettier": "^2.0.1",
        "typescript": "^3.6.2"
    },
    "dependencies": {
        "async": "^3.1.0",
        "bcrypt": "^3.0.7",
        "express": "^4.17.1",
        "log": "^6.0.0",
        "log-node": "^7.0.0",
        "mongoose": "^5.7.5",
        "request": "^2.88.0",
        "socket.io": "^2.4.0",
        "swagger-ui-express": "^4.1.1"
    },
    "nodemonConfig": {
        "ignore": [
            "**/*.test.ts",
            "**/*.spec.ts",
            ".git",
            "node_modules"
        ],
        "watch": [
            "src"
        ],
        "exec": "npm start",
        "ext": "ts"
    }
}
